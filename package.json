{
  "name": "bloodconnect-backend",
  "version": "1.0.0",
  "description": "Backend API for BloodConnect with enhanced security",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:security": "npm audit && npm run test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "logs:clean": "rm -rf logs/*.log",
    "logs:rotate": "node scripts/rotate-logs.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.9",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "blood-donation",
    "healthcare",
    "api",
    "security",
    "nodejs",
    "express"
