# Environment Configuration
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bloodconnect
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/bloodconnect

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Server Configuration
PORT=5000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@bloodconnect.com

# Security Configuration
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=debug
ENABLE_SECURITY_LOGS=true
ENABLE_REQUEST_LOGS=false

# Frontend URL (for production redirects)
FRONTEND_URL=https://yourdomain.com